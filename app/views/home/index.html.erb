                <div class="post-title" >
                    <div style="display:flex;">
                        <div class="post-profile">

                        </div>
                            <% @bc = Post.find_by_sql("SELECT * FROM Posts ORDER BY like DESC")%>
                            <% @cd = defined? User.find_by_id(@bc[0].author_id)%>
                        <div class="post-author">
                            <h1><%if @cd != nil then @de = User.find_by_id(@bc[0].author_id)%><%=@de.email%></h1>
                            <div style="display:flex; flex-direction:row; align-items:center;">
                                <h1><%=@de.created_at%><%end%></h1>
                                <img src="/assets/earth.svg" alt="" style="width:2vh; height:2vh; margin-left:0.3vh; position:relative; top:0.3vh;">
                            </div>   
                        </div>
                    </div>
                    <img src="/assets/3dot.svg" alt="" class="dot">
                </div>
            
                 <h1 class="post-content"><%=if @cd != nil then @bc[0].content end%></h1>
               
            </div>
           
                <%if @de != nil%>
                    <%then%>
                     <div class="main-5-container-comment">
                    <% @ef = Post.find(@bc[0].id)%>
                    <%  @ef.comments.each do |a| %>
                        <div class="comment-box" onclicked="toggle_comment()">
                            <div class="post-profile">
                            </div>
                            <div class="comment">
                                <h1><%=User.find_by_id(a.author_id).email%>&nbsp;&nbsp;<%=a.content%></h1>
                            </div> 
                        </div>
                        
                    <%end%>
                    </div>
                <%end%>   
            
            </div>
        <%=image_tag("left.svg", {:style=>"width:5vh; height:5vh; margin-left: 3vh;z-index:1000;margin-top: 10vh"})%>
        </div>    
</div>


<script>
$(window).scroll(function() {
        // scroll_position =  $(window).scrollTop();
        scroll_position1 = $(window).scrollLeft();
        $(".nav").css({left:`-${scroll_position1}px`});
});

$(".mCSB_container").css({"position":"absolute"})
function movetop() {
    $('html, body').animate({scrollTop : 0}, 900);
}
function movequiz() {
    var offset = $(".main-4").offset();
    $('html, body').animate({scrollTop : offset.top}, 800);
}
function toggle_comment() {
    $('.comment-box h1').css({'white-space': 'initial' })
}
$(".post-content").mCustomScrollbar({
    axis: "y",
    theme: "dark-3"
});

</script>