/*main-1*/
.main-1 {
    padding-top: 9vh;
    position:  relative;
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    background-color: #954ba2;
    background: #954ba2;
}

.main-1-back {
    width: 100%;
    height: 100%;
    position:absolute;
    top: 0;
    left:0;
}

.main-1-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    width:100vw;
    position:relative;
}

.main-1-title {
    position: absolute;
    top: 0vh;
    margin-top: 20vh;
    display: flex;
    flex-direction:  column;
    justify-content: center;
    align-items: center;
    img {
        height: 20vh;
        width: 35vh;
        position:absolute;
        margin-top: 4vh;
    }
}

.main-1 h1 {
    position: absolute;
    top: 20vh;
    margin-top:12vh;
    color:white;
    font-size:  4vh;
    font-weight: 300;
}

.main-1 h2 {
    position:absolute;
    top: 35vh;
    margin-top: 2vh;
    font-size:  2.5vh;
    font-weight: 300;
    line-height:  4vh;
    text-align: center;
    color: rgb(255, 255, 255);
    text-shadow: 0 0 0.5vh rgb(110, 110, 110);
}

.main-1-sympathy {
    width: 35vh;
    height: 25vh;
    position:Absolute;
    top:52vh;
    margin-top:2vh;
    cursor:pointer;
}

.main-1-arrow1 {
    width:6vh;
    height: 6vh;
    position:absolute;
    top:77vh;
    fill:white;
}

.main-1-arrow2 {
    width:6vh;
    height: 6vh;
    position:absolute;
    top:80vh;
    fill:white;
}


.main-1-title:before {
    content: '';
    width: 25vh;
    height: 25vh;
    position:absolute;
    background: url("물음표.svg") 100% 100% no-repeat;
   top: -13vh;
   left:9vh;
    opacity:1;

}
.main-1-title:after {
    content: '';
    width: 25vh;
    height: 25vh;
    position:absolute;
    background: url("이럴때있다말풍선.svg") 100% 100% no-repeat;
   top: -22vh;
   right:12vh;
    opacity:1;

}

