/* 메인페이지 */
.education-main {
    width: 100%;
    height: 100%;
    display: flex;
}

.education-main-chart {
    width: 35vh;
    height: 100%;
    position:fixed;
    z-index: 900;
}

.education-main-chart-box {
    height: 100%;
    position:relative;
    z-index: 500;
    padding-top: 9vh;
    background-color: #1c182f;
    box-shadow: 2vh 0vh 3vh rgba(34, 34, 34, 0.137);
}

.education-main-chart-box-item {
    width: 100%;
    padding: 1.7vh 0vh 0vh 0vh;
}

.education-main-chart-box-item h1 {
    color: white;
}

.chart-title {
    margin-left: 2vh;
    padding-bottom: 1.3vh;
    display: flex;
    align-items: center;
    font-size: 2.5vh;
    cursor: pointer;
}

.education-main-chart-box-item-box {
    width: 100%;
    height: 100%;
}

.education-main-chart-box-item-box-each {
    width: 100%;
    height: 6vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    cursor: pointer;
    img {
        height: 2.5vh;
        width: 2.5vh;
        position:relative;
        top:0.2vh;
        margin-left: 4vh;
    }
}
.education-main-chart-box-item-box-each h1 {
    margin-left: 0.5vw;
    font-size: 1.8vh;
}

.education-main-chart-box-item-box-each h2 {
    margin-left:1vh;
    color:rgb(80, 67, 102);
    font-weight: 300;
    font-size: 1.5vh;
}

.education-main-box {
    width: 100vw;
    width: -moz-calc(100vw - 37vh);
    width: calc(100vw - 37vh);
    width: -webkit-calc(100vw - 37vh);
    position:absolute;
    margin-left:35vh;
    display:flex;
    flex-direction:column;
}

.airpin {
    width: 100vw;
    width: -moz-calc(100vw - 37vh);
    width: calc(100vw - 37vh);
    width: -webkit-calc(100vw - 37vh);
    height: 100vh;
    position: relative;
}

.education-main-box-content {
    width: 100vw;
    width: -moz-calc(100vw - 37vh);
    width: calc(100vw - 37vh);
    width: -webkit-calc(100vw - 37vh);
    display: flex;
    flex-direction: column;
    justify-content:  center;
    align-items: center;
    position:absolute;
    top: 0;
}

#category- {
    h1 {
        font-weighT: 500;
        color: rgb(82, 79, 94);
    }
}



#contraception {
    background: #ffe26f url(<%= asset_path '교육바탕.png' %>) 100% 100% repeat;
    height: 100vh;
    padding-top: 9vh;
    position:relative;
    img {
        width: 26vh;
        height: 28vh;
        background-color: #ffe26f;
    }
    button {
        margin-top: 0.5vh;
        width: 38vh;
        height: 7vh;
        border-radius: 5vh;
        border: none;
        background-color: #563761;
        font-size: 3vh;
        font-weighT: 500; 
        color: white;
        box-shadow: 1vh 1vh 3vh rgba(82, 82, 82, 0.205);
        cursor: pointer;
    }
}

.contraception-back {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index:0;
}


#contraception::before {
    content: '';
    width: 20vh;
    height: 18vh;
    position:absolute;
    top:27%;
    left:55%;
    background-image: url(<%= asset_path '피임질문.png' %>);
    background-size: 100% auto;
    background-repeat: no-repeat;
}

